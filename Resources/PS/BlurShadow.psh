; Declare pixel shader version
ps_1_1

def c0, 0.25, 0.25, 0.25, 0.25

; get colors from all 4 texture stages
tex t0
tex t1
tex t2
tex t3

; Scale each color by the appropriate weighting and add them to the final output
mul        r0, c0, t0
mad        r0, c0, t1, r0
mad        r0, c0, t2, r0
mad        r0, c0, t3, r0

